<%= turbo_frame_tag 'form' do %>
  <% if flash[:error] %>
    <div class="rounded-md bg-red-50 p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <!-- Heroicon name: solid/x-circle -->
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There was a problem validating your email</h3>
        </div>
      </div>
    </div>
  <% end %>
  <%= form_with model: [:onboarding, verification] do %>
    <%= label_tag :entered_code, "Enter the code we just sent to <span class='font-bold'>#{verification.email}</span>".html_safe, class: 'block font-medium text-gray-700'%>
    <%= text_field_tag :entered_code, "", class: 'shadow-sm text-3xl focus:ring-violet-500 focus:border-violet-500 block w-full border-gray-300 rounded-md' %>
    <div class="pt-4">
      <button type="submit" class="inline-flex w-full justify-center items-center px-6 py-3 border border-transparent text-xl font-medium rounded-md shadow-sm text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500">Verify</button>
    </div>
  <% end %>
<% end %>
