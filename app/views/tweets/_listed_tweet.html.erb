<div class="col-span-1" id="<%= dom_id(tweet, 'listed') %>">
  <div class="grid grid-cols-3 bg-white rounded-md shadow-md md:grid-cols-8 xl:grid-cols-10">
    <div class="order-1 col-span-2 p-2 text-sm md:col-span-2">
      <div class="flex flex-col space-y-2">
        <div class="flex flex-col items-center lg:flex-row">
          <div class="flex-shrink-0 w-10 h-10">
            <%= image_tag tweet.profile_image_url, class: 'h-10 w-10 rounded-full' %>
          </div>
          <div class="lg:ml-4">
            <div class="font-medium text-gray-900"><%= link_to("@#{tweet.username}", "https://twitter.com/#{tweet.username}", target: '_blank', class: 'underline text-purple-500') %></div>
            <div class="text-gray-500"><%= tweet.name %></div>
          </div>
        </div>
        <div>
          <%= form_with model: [tweet.topic, TweeterIgnoreRule.new] do |f| %>
            <%= f.hidden_field :author_id, value: tweet.author_id %>
            <%= f.hidden_field :page, value: params[:page] %>
            <button type="submit" class="inline-flex items-center justify-center w-full px-2 py-1 text-sm font-medium leading-4 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500">Ignore user</button>
          <% end %>
        </div>
      </div>
    </div>
    <div class="order-3 col-span-5 p-2 text-sm text-gray-500 md:col-span-4 xl:col-span-5 md:order-2">
      <div class=""><%= link_to(local_time(tweet.tweeted_at), tweet.url, target: '_blank', class: 'text-purple-500 underline text-xs') %></div>
      <div class="mt-1 text-gray-900"><%= display_entitites(tweet.text) %></div>
      <div class="mt-1">
        <% tweet.hashtags.map do |tag| %>
          <div class="relative inline-block mr-2 text-sm text-purple-400" data-controller='saved-hashtag'>
            <div class="absolute bottom-0 left-0 z-50 hidden p-1 bg-white border border-gray-200 rounded-md shadow-md" data-saved-hashtag-target="forms">
              <div class="relative p-4">
                <a data-action="click->saved-hashtag#close" href="#" class="absolute top-0 right-0 text-gray-500">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </a>
                <p class="pt-4 font-semibold text-gray-800">Modify topic:</p>
                <div class="flex flex-col mt-4 space-y-2">
                  <%= form_with model: [topic, tweet, NegativeSearchTerm.new] do |f| %>
                    <%= f.hidden_field :page, value: params[:page] %>
                    <%= f.hidden_field :term, value: "##{tag.tag}" %>
                    <button type="submit" class="inline-flex items-center px-3 py-2 text-sm font-medium leading-4 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">Exclude <%= "##{tag.tag}"%></button>
                  <% end %>
                  <%= form_with model: [topic, tweet, SearchTerm.new] do |f| %>
                    <%= f.hidden_field :page, value: params[:page] %>
                    <%= f.hidden_field :term, value: "##{tag.tag}" %>
                    <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-green-700 bg-green-100 border border-transparent rounded-md hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">Include <%= "##{tag.tag}"%></button>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="mt-1">
              <% if topic.negative_search_terms.where(term: "##{tag.tag.downcase}").present? %>
                <span class="inline-flex items-center rounded bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">#<%= tag.tag %></span>
              <% elsif topic.search_terms.where(term: "##{tag.tag.downcase}").present? %>
                <span class="inline-flex items-center rounded bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">#<%= tag.tag %></span>
              <% else %>
                <a href="#" data-action="click->saved-hashtag#open" class="inline-flex items-center rounded bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-800">#<%= tag.tag %></a>
              <% end %>
            </div>
          </div>
        <% end.join(' ') %>
      </div>
    </div>
    <div class="order-last col-span-3 p-2 text-sm text-gray-500 xl:order-3 md:col-span-8 xl:col-span-1">
      <div class="flex items-center justify-between w-full text-gray-700 xl:items-start xl:flex-col">
        <div class="flex items-center space-x-1">
          <div class="text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path d="M15.5 2A1.5 1.5 0 0014 3.5v13a1.5 1.5 0 001.5 1.5h1a1.5 1.5 0 001.5-1.5v-13A1.5 1.5 0 0016.5 2h-1zM9.5 6A1.5 1.5 0 008 7.5v9A1.5 1.5 0 009.5 18h1a1.5 1.5 0 001.5-1.5v-9A1.5 1.5 0 0010.5 6h-1zM3.5 10A1.5 1.5 0 002 11.5v5A1.5 1.5 0 003.5 18h1A1.5 1.5 0 006 16.5v-5A1.5 1.5 0 004.5 10h-1z" />
            </svg>
          </div>
          <div ><%= number_with_delimiter(tweet.score.round) %></div>
        </div>
        <div class="flex items-center space-x-1">
          <div class="text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M2 10c0-3.967 3.69-7 8-7 4.31 0 8 3.033 8 7s-3.69 7-8 7a9.165 9.165 0 01-1.504-.123 5.976 5.976 0 01-3.935 1.107.75.75 0 01-.584-1.143 3.478 3.478 0 00.522-1.756C2.979 13.825 2 12.025 2 10z" clip-rule="evenodd" />
            </svg>
          </div>
          <div >
            <%= number_with_delimiter(tweet.reply_count) %>
          </div>
        </div>
        <div class="flex items-center space-x-1">
          <div class="text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path fill-rule="evenodd" d="M15.312 11.424a5.5 5.5 0 01-9.201 2.466l-.312-.311h2.433a.75.75 0 000-1.5H3.989a.75.75 0 00-.75.75v4.242a.75.75 0 001.5 0v-2.43l.31.31a7 7 0 0011.712-3.138.75.75 0 00-1.449-.39zm1.23-3.723a.75.75 0 00.219-.53V2.929a.75.75 0 00-1.5 0V5.36l-.31-.31A7 7 0 003.239 8.188a.75.75 0 101.448.389A5.5 5.5 0 0113.89 6.11l.311.31h-2.432a.75.75 0 000 1.5h4.243a.75.75 0 00.53-.219z" clip-rule="evenodd" />
            </svg>
          </div>
          <div >
            <%= number_with_delimiter(tweet.retweet_count) %>
          </div>
        </div>
        <div class="flex items-center space-x-1">
          <div class="text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path d="M9.653 16.915l-.005-.003-.019-.01a20.759 20.759 0 01-1.162-.682 22.045 22.045 0 01-2.582-1.9C4.045 12.733 2 10.352 2 7.5a4.5 4.5 0 018-2.828A4.5 4.5 0 0118 7.5c0 2.852-2.044 5.233-3.885 6.82a22.049 22.049 0 01-3.744 2.582l-.019.01-.005.003h-.002a.739.739 0 01-.69.001l-.002-.001z" />
            </svg>
          </div>
          <div >
            <%= number_with_delimiter(tweet.like_count) %>
          </div>
        </div>
        <div class="flex items-center space-x-1">
          <div class="text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path d="M3.505 2.365A41.369 41.369 0 019 2c1.863 0 3.697.124 5.495.365 1.247.167 2.18 1.108 2.435 2.268a4.45 4.45 0 00-.577-.069 43.141 43.141 0 00-4.706 0C9.229 4.696 7.5 6.727 7.5 8.998v2.24c0 1.413.67 2.735 1.76 3.562l-2.98 2.98A.75.75 0 015 17.25v-3.443c-.501-.048-1-.106-1.495-.172C2.033 13.438 1 12.162 1 10.72V5.28c0-1.441 1.033-2.717 2.505-2.914z" />
              <path d="M14 6c-.762 0-1.52.02-2.271.062C10.157 6.148 9 7.472 9 8.998v2.24c0 1.519 1.147 2.839 2.71 2.935.214.013.428.024.642.034.2.009.385.09.518.224l2.35 2.35a.75.75 0 001.28-.531v-2.07c1.453-.195 2.5-1.463 2.5-2.915V8.998c0-1.526-1.157-2.85-2.729-2.936A41.645 41.645 0 0014 6z" />
            </svg>
          </div>
          <div >
            <%= number_with_delimiter(tweet.quote_count) %>
          </div>
        </div>
        <div class="flex items-center space-x-1">
          <div class="text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
              <path d="M10 12.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" />
              <path fill-rule="evenodd" d="M.664 10.59a1.651 1.651 0 010-1.186A10.004 10.004 0 0110 3c4.257 0 7.893 2.66 9.336 6.41.147.381.146.804 0 1.186A10.004 10.004 0 0110 17c-4.257 0-7.893-2.66-9.336-6.41zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <div >
            <%= number_with_delimiter(tweet.impression_count) %>
          </div>
        </div>
      </div>
    </div>
    <div class="order-2 col-span-1 p-2 text-sm font-medium xl:order-4 md:col-span-2 md:order-3 xl:col-span-2">
      <div class="flex flex-col items-center space-y-2 xl:flex-row xl:justify-end xl:space-y-0 xl:space-x-2">
        <%= form_with model: [tweet.topic, tweet], class: 'w-full xl:w-auto', data: {'turbo-stream': true} do |f| %>
          <%= f.hidden_field :page, value: params[:page] %>
          <%= f.hidden_field :archived, value: true %>
          <button type="submit" class="inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-purple-700 bg-purple-100 border border-transparent rounded-md xl:w-auto hover:bg-purple-200 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">Archive</button>
        <% end %>
        <%= form_with model: [tweet.topic, tweet], class: 'w-full xl:w-auto', data: {'turbo-stream': true} do |f| %>
          <%= f.hidden_field :page, value: params[:page] %>
          <%= f.hidden_field :saved, value: true %>
          <button type="submit" class="inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium text-white bg-purple-600 border border-transparent rounded-md shadow-sm xl:w-auto hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">Save</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
