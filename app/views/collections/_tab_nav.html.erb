<div class="mt-8">
  <div class="sm:hidden">
    <label for="tabs" class="sr-only">Select a tab</label>
    <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
    <select id="tabs" name="tabs" class="block w-full py-2 pl-3 pr-10 text-base border-gray-300 rounded-md focus:border-purple-500 focus:outline-none focus:ring-purple-500 sm:text-sm">
      <option>Editor</option>
      <option>HTML</option>
      <option>Markdown</option>
      <option>Plain text</option>
      <option>Rendered HTML</option>
    </select>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="flex -mb-px space-x-8" aria-label="Tabs">
        <!-- Current: "border-purple-500 text-purple-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
        <%= collection_tab_nav_link("Editor", collection_path(collection), active == :show) %>
        <%= collection_tab_nav_link("HTML", collection_html_path(collection), active == :html) %>
        <%= collection_tab_nav_link("Markdown", collection_markdown_path(collection), active == :markdown) %>
        <%= collection_tab_nav_link("Plain text", collection_plain_text_path(collection), active == :plain_text) %>
        <%= collection_tab_nav_link("Rendered HTML", collection_rendered_path(collection), active == :rendered) %>
      </nav>
    </div>
  </div>
</div>