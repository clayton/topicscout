<div class="mt-8">
  <div class="sm:hidden">
    <label for="tabs" class="sr-only">Select a tab</label>
    <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
    <select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-purple-500 focus:outline-none focus:ring-purple-500 sm:text-sm">
      <option>Tweets & Links</option>
      <option>Markdown</option>
    </select>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <!-- Current: "border-purple-500 text-purple-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
        <%= collection_tab_nav_link("Tweets & Links", collection_path(collection), active == :show) %>
        <%= collection_tab_nav_link("Markdown", collection_markdown_path(collection), active == :markdown) %>
      </nav>
    </div>
  </div>
</div>