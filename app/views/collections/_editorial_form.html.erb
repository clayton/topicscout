<%= form_with model: [collection, url] do |f| %>
  <div class="flex flex-col space-y-2">
    <div>
      <%= f.label :editorial_title, class: 'sr-only' %>
      <%= f.text_field :editorial_title, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', placeholder: 'Title' %>
    </div>
    <div>
      <%= f.label :editorial_url, class: 'sr-only' %>
      <%= f.text_field :editorial_url, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', placeholder: 'URL' %>
    </div>
    <div>
      <%= f.label :editorial_description, class: 'sr-only' %>
      <%= f.text_area :editorial_description, class: 'block w-full rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:py-1.5 sm:text-sm sm:leading-6', placeholder: 'Description', rows: 2 %>
    </div>    
  </div>
  <div class="flex items-center justify-end mt-2">
    <%= f.submit "Save", class: 'px-2 py-1 text-sm font-semibold text-purple-600 rounded shadow-sm bg-purple-50 hover:bg-purple-100' %>
  </div>
<% end %>
