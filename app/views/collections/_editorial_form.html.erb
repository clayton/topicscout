<%= form_with model: [collection, url], data: {'editorial-target' => 'form', 'remote' => true} do |f| %>
  <div class="flex flex-col space-y-2">
    <div>
      <%= f.label :editorial_title, class: 'sr-only' %>
      <%= f.text_field :editorial_title, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', placeholder: 'Title', 'data-action' => 'focusout->editorial#save' %>
    </div>
    <div>
      <%= f.label :editorial_url, class: 'sr-only' %>
      <%= f.text_field :editorial_url, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', placeholder: 'URL', 'data-action' => 'focusout->editorial#save' %>
    </div>
    <div>
      <%= f.label :editorial_description, class: 'sr-only' %>
      <%= f.text_area :editorial_description, class: 'block w-full rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:py-1.5 sm:text-sm sm:leading-6', placeholder: 'Description', rows: 2, 'data-action' => 'focusout->editorial#save' %>
    </div>
    <div>
      <%= f.label :editorial_category, class: 'sr-only' %>
      <%= f.select :editorial_category, options_for_select(collection.collection_categories.map(&:name), url.editorial_category), {include_blank: 'Choose a category'}, {class: 'mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm'} %>
    </div>    
  </div>
  <div class="flex items-center justify-end mt-2">
    <%= f.submit "Save", class: 'px-2 py-1 text-sm font-semibold text-purple-600 rounded shadow-sm bg-purple-50 hover:bg-purple-100', data: {'editorial-target' => 'button'} %>
  </div>
<% end %>
