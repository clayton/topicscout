<div class="px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Collections</h1>
      <p class="mt-2 text-sm text-gray-700">Organize your saved tweets with collections.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Add collection", new_collection_path, class: 'block rounded-md bg-purple-600 py-1.5 px-3 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600' %>
    </div>
  </div>
  <div class="flow-root mt-8">
    <div class="-mx-6 -my-2 overflow-x-auto bg-white rounded-md lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-6 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Name</th>
              <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">Created on</th>
              <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">No. of Tweets</th>
              <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900">No. of Links</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-6 sm:pr-0">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @collections.each do |collection|%>
              <tr>
                <td class="py-4 pl-6 pr-3 text-sm font-medium text-gray-900 whitespace-nowrap sm:pl-0"><%= link_to collection.name, collection_path(collection), class: 'text-purple-500 hover:text-purple-700' %></td>
                <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= local_time(collection.created_at) %></td>
                <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= collection.tweets.count %></td>
                <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= collection.urls.count %></td>
                <td class="relative py-4 pl-3 pr-6 text-sm font-medium text-right whitespace-nowrap sm:pr-0">
                  <%= link_to "Edit", edit_collection_path(collection), class: 'text-purple-600 hover:text-purple-900' %>
                </td>
              </tr>
            <% end %>
            <!-- More people... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
