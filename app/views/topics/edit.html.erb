<%= turbo_frame_tag dom_id(@topic), target: '_top' do %>
<div class="md:flex md:items-center md:justify-between">
  <div class="flex-1 min-w-0">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">Editing: "<%= @topic.name %>"</h2>
  </div>
  <div class="flex mt-4 md:mt-0 md:ml-4">
    <%= link_to 'Cancel', topic_tweets_path(@topic), class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500' %>
  </div>
</div>
<div class="px-8 py-8 mt-16 bg-white rounded-md shadow-md">
  <%= render partial: 'form', locals: { cancel_link: topic_tweets_path(@topic) } %>
</div>
<div class="px-8 py-8 mt-16 bg-white rounded-md shadow-md">
  <% if @topic.persisted? %>
    <%= render partial: 'delete_form' %>
  <% end %>
</div>
<% end %>