<%= form_with model: @topic, method: :delete, class: '' do |f| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Danger Zone</h3>
        <p class="mt-1 text-sm text-gray-500">Be careful, there's no "undo!"</p>
      </div>
      <div class="pt-6">
        <div class="mt-6">
          <fieldset>
            <legend class="sr-only">Delete topic</legend>
            <div class="mt-4 space-y-4">
              <div class="relative flex items-start">
                <div class="flex items-center h-5">
                  <%= check_box_tag :delete, 1, false, class: 'focus:ring-violet-500 h-4 w-4 text-violet-600 border-gray-300 rounded' %>
                </div>
                <div class="ml-3 text-sm">
                  <%= label_tag :delete, "Delete this topic", class: 'font-medium text-gray-700' %>
                  <p class="text-gray-500">This is permanent.</p>
                </div>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5">
    <div class="flex justify-end">
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">Confirm</button>
    </div>
  </div>
<% end %>
