<div class="px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Topics</h1>
      <p class="mt-2 text-sm text-gray-700">A list of your active topics.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to 'New topic', new_topic_path, class: 'block rounded-md bg-purple-600 py-1.5 px-3 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600' %>
    </div>
  </div>
  <div class="flow-root mt-8">
    <div class="-mx-6 -my-2 overflow-x-auto lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-6 pr-3 text-left text-sm font-semibold text-gray-900">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Recently added</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Unread tweets</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Unread links</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Saved</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Collected</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-6">
                  <span class="sr-only">Edit</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @topics.each do |topic| %>
                <tr>
                  <td class="py-4 pl-6 pr-3 text-sm font-medium text-gray-900 whitespace-nowrap"><%= topic.name %></td>
                  <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= number_with_delimiter(topic.twitter_search_results.completed.newest.first&.results_count) %></td>
                  <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= link_to(number_with_delimiter(number_with_delimiter(topic.unedited_tweets&.count) || 0), topic_tweets_path(topic), class: 'underline text-purple-500 hover:text-purple-900') %></td>
                  <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= link_to((number_with_delimiter(topic.unedited_urls&.count) || 0), topic_urls_path(topic), class: 'underline text-purple-500 hover:text-purple-900') %></td>
                  <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= link_to((number_with_delimiter(topic.tweets.reviewing&.count) || 0), topic_saves_path(topic), class: 'underline text-purple-500 hover:text-purple-900') %></td>
                  <td class="px-3 py-4 text-sm text-gray-500 whitespace-nowrap"><%= number_with_delimiter(topic.tweets.collected&.count) || 0 %></td>
                  <td class="relative py-4 pl-3 pr-6 text-sm font-medium text-right whitespace-nowrap">
                    <%= link_to "Edit", edit_topic_path(topic), class: 'text-purple-600 hover:text-purple-900' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
